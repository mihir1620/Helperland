        </nav>
    </header>

    <!-- The Login Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered " style="max-width:370px">
            <div class="modal-content">

                <div class="modal-header">
                    <h4 class="modal-title"><b>Login to your account</b></h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body login-modal-body">
                    <form asp-controller="account" asp-action="login" method="post">
                        <div class="form-group ">
                            <input class="form-control" required type="text" name="email" placeholder="Email" />
                        </div>
                        <div class="form-group ">
                            <input class="form-control" required type="password" name="password" placeholder="Password" />
                        </div>
                        <div class="form-group ">
                            <label class="checkbox-inline">
                                <input type="checkbox" class="form-check-inline" />
                                <span class="terms"> Remember me</span>
                            </label>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="login-btn">Login</button>
                        </div>
                    </form>
                    <div class="text-center">
                        <a href="" type="button" data-toggle="modal" data-target="#forgotModal" data-dismiss="modal">Forgot Password</a>
                    </div>
                    <div class="text-center">
                        Don't have an account <a href="@Url.Action("Create", "CreateUser")">Create an account</a>
                    </div>
                </div>


            </div>
        </div>
    </div>
    <!-- The Login Modal Ends-->
    <!-- The Forgot Modal -->
    <div class="modal fade" id="forgotModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered " style="max-width:370px">
            <div class="modal-content">

                <div class="modal-header">
                    <h4 class="modal-title"><b>Forgot password</b></h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
     
                    <form asp-action="ForgotPassword" asp-controller="Account" method="post">

                        <div class="form-group ">
                            <input class="form-control" asp-for="Email" required type="email" placeholder="Email" />

                        </div>

                        <div class="form-group">
                            <button class="login-btn">Send</button>
                        </div>
                    </form>
                    <div class="text-center">
                        <a href="" type="button" data-toggle="modal" data-dismiss="modal" data-target="#loginModal">Login now</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- The Forgot Modal Ends-->

    <div class="wrapper">

        @RenderBody()

    </div>


    <section class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-3 footer-logo">
                    <a href=#><img src="~/images/white-logo-transparent-background-copy-4.png" style="width: 120px;height: 92px;"></a>
                </div>
                <div class="col-sm-6 footer-links">
