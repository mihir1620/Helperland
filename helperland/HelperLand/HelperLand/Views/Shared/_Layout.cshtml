                        <li class="nav-item ">
                            <a href="@Url.Action("Contact", "Home")" class="nav-link Rounded-Rectangle1">
                                Contact
                            </a>
                        </li>

                        <li class="nav-item afterLogin">
                            <a href="@Url.Action("Dashboard", "Customer")" class="nav-link">
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item afterLogin">
                            <a href="@Url.Action("Servicehistory", "Customer")" class="nav-link">
                                Service History
                            </a>
                        </li>
                        <li class="nav-item afterLogin">
                            <a href="@Url.Action("Mysetting", "Customer")" class="nav-link">
                                My Setting
                            </a>
                        </li>
                        <li class="nav-item afterLogin">
                            <a href="@Url.Action("logout", "Home")" class="nav-link">
