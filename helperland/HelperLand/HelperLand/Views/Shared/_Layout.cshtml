                            <a href="@Url.Action("Dashboard", "ServiceProvider")" class="nav-link">
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item afterLogin">
                            <a href="@Url.Action("Mysetting", "ServiceProvider")" class="nav-link">
                                My Setting
                            </a>
                        </li>
                        <li class="nav-item afterLogin">
                            <a href="@Url.Action("logout", "Home")" class="nav-link">
                                Logout
                            </a>
                        </li>
                        @*<li class="vertical-line remove"></li>*@
                        <li class="nav-item remove">
                            <a href="" class="nav-link" type="button">
                                <div>
                                    <img src="~/images/icon-notification.png">
                                </div>

                            </a>
                        </li>
                        @*<li class="vertical-line remove"></li>*@
                        <li class="nav-item dropdown remove">
                            <a href="#" type="button " class="nav-link dropdown-toggle" data-toggle="dropdown">

