        <div class="container d-flex justify-content-center">
            <div class="alert alert-success col-lg-6 alert1">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>@TempData["pswdReset"]</strong>
            </div>
        </div>
    }

    @if (TempData["spDetail"] != null)
    {
        <div class="container d-flex justify-content-center">
            <div class="alert alert-success col-lg-6 alert1">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>@TempData["spDetail"]</strong>
            </div>
        </div>
    }

    @if (TempData["spAdd"] != null)
    {
        <div class="container d-flex justify-content-center">
            <div class="alert alert-success col-lg-6 alert1">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>@TempData["spAdd"]</strong>
            </div>
        </div>
    }

    @if (TempData["spNewAdd"] != null)
    {
        <div class="container d-flex justify-content-center">
            <div class="alert alert-success col-lg-6 alert1">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>@TempData["spNewAdd"]</strong>
            </div>
        </div>
    }
</section>
